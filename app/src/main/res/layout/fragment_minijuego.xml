<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.studio.aal.tunerstudio.Minijuego"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="top">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/cosas1"
        android:layout_marginTop="-58dp"
        />

    <!--<ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/crono"
        android:layout_marginTop="-60dp"
        android:alpha="0.2"
        android:id="@+id/cuadrocrono"
        />-->

    <Chronometer
        android:id="@+id/cuadrocrono"
        android:format="%s"
        android:textSize="40dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/crono"
        android:alpha="0.2"
        android:gravity="center"
        android:layout_marginTop="-40dp"
        android:paddingTop="30dp"
        android:textColor="#FF544A45"

        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:id="@+id/nums_cron"/>

    <!--android:alpha="0.2"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/selectNote"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="70dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/boton"
                android:id="@+id/b1"
                android:layout_margin="15dp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/boton"
                android:id="@+id/b2"
                android:layout_margin="15dp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/boton"
                android:id="@+id/b3"
                android:layout_margin="15dp"
                />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layouterror"
        android:background="#ff0000">
    </RelativeLayout>
</RelativeLayout>

